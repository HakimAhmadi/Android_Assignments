<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <EditText
        android:id="@+id/Activity2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Integer"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Activity2ButtonResult"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:text="Print_Star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Activity2Text" />

    <Button
        android:id="@+id/Activity2ButtonNext3"
        android:layout_width="123dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:text="Activity_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Activity2ButtonResult" />

    <TextView
        android:id="@+id/Activity2TextView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="52dp"
        android:fadeScrollbars="false"
        android:fontFamily="monospace"
        android:hint="Result will appear here"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Activity2ButtonNext3" />
</androidx.constraintlayout.widget.ConstraintLayout>