<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2_carbackground"
    tools:context=".Activity2_body">


    <TextView
        android:id="@+id/CarDetail"
        android:layout_width="316dp"
        android:layout_height="375dp"
        android:layout_below="@+id/CarImage2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="98dp"
        android:scrollbars="vertical"
        android:text="Car Detail" />

    <ImageView
        android:id="@+id/CarImage2"
        android:layout_width="329dp"
        android:layout_height="179dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="51dp"
        app:srcCompat="@drawable/ford" />

</RelativeLayout>